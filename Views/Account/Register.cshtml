@{
    ViewBag.title = "Register";
}
@model ElectronicStore.Models.RegisterViewModel


<div class="container">
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="danger" asp-validation-summary="All"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" autocomplete="off" type="email" />
        
        </div>
        <div>
            <label asp-for="Name"></label><br />
            <input asp-for="Name"  autocomplete="off"/>
           
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" autocomplete="off" id="password-input" />
          
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br />
            <input id="password-input2" autocomplete="off" asp-for="PasswordConfirm" />
        
            <label><input type="checkbox" class="password-checkbox" autocomplete="off">  Show Password</label>
        </div>
        <div>
            <input type="submit" style="margin-top: 5px"  class="btn btn-info btn-lg" value="Register" />
        </div>
    </form>
    <script src="https://snipp.ru/cdn/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $('body').on('click', '.password-checkbox', function () {
            if ($(this).is(':checked')) {
                $('#password-input').attr('type', 'text');
            } else {
                $('#password-input').attr('type', 'password');
            }
        });

        $('body').on('click', '.password-checkbox', function () {
            if ($(this).is(':checked')) {
                $('#password-input2').attr('type', 'text');
            } else {
                $('#password-input2').attr('type', 'password');
            }
        });
    </script>
</div>

